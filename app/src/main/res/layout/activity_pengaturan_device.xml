<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PengaturanDevice.PengaturanDevice"
    android:background="@color/grayBox">
    <RelativeLayout
        android:background="@color/warnaPutih"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        >

        <TextView
            android:id="@+id/labelHeader"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Pengaturan Device"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/warnaHitam"/>
        <ImageView
            android:id="@+id/btn_back"
            android:layout_centerVertical="true"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_navigate_before_black_24dp"
            />
    </RelativeLayout>
    <RelativeLayout

        android:layout_marginTop="18dp"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:padding="10dp"
        android:background="@color/warnaPutih"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="18sp"
            android:textColor="@color/warnaHitam"/>
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/idDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iqbalul.hidayat2801@gmail.com"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:textColor="@color/grayText"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/editnamadevice2"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:padding="10dp"
        android:background="@color/warnaPutih"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Device"
            android:textSize="18sp"
            android:textColor="@color/warnaHitam"/>
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/namaDevice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iqbalul.hidayat2801@gmail.com"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:textColor="@color/grayText"/>
    </RelativeLayout>
    <RelativeLayout
    android:focusable="true"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:id="@+id/editnamadevice"
    android:padding="10dp"
    android:background="@color/warnaPutih"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <TextView
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Device"
        android:textSize="18sp"
        android:textColor="@color/warnaHitam"/>
    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/namaDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iqbal"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:textSize="16sp"
        android:textColor="@color/grayText"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_navigate_next_black_24dp"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>
    <RelativeLayout
        android:focusable="true"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:id="@+id/editLokasi"
        android:padding="10dp"
        android:background="@color/warnaPutih"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lokasi Device"
            android:textSize="18sp"
            android:textColor="@color/warnaHitam"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_navigate_next_black_24dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="18dp"
        android:focusable="true"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:id="@+id/berbagiDevice"
        android:padding="10dp"
        android:background="@color/warnaPutih"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Berbagi Device"
            android:textSize="18sp"
            android:textColor="@color/warnaHitam"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_navigate_next_black_24dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</androidx.appcompat.widget.LinearLayoutCompat>